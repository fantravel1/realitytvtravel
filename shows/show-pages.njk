---
pagination:
  data: shows.shows
  size: 1
  alias: show
permalink: "/shows/{{ show.id }}/"
layout: layouts/base.njk
eleventyComputed:
  title: "{{ show.name }} Filming Locations"
  meta:
    title: "{{ show.meta.title }}"
    description: "{{ show.meta.description }}"
  type: "show"
  name: "{{ show.name }}"
  network: "{{ show.network }}"
  seasons: "{{ show.seasons }}"
  breadcrumbs:
    - name: Shows
      url: /shows/
    - name: "{{ show.name }}"
      url: "/shows/{{ show.id }}/"
---

<article class="show-page">
  <header class="page-header">
    <div class="page-meta">
      <span class="badge badge-network">{{ show.network }}</span>
      <span>{{ show.seasons }} Seasons</span>
      {% if show.status == "active" %}
      <span class="badge" style="background: #4caf50; color: #fff;">Currently Airing</span>
      {% endif %}
    </div>
    <h1>{{ show.name }} Filming Locations</h1>
    <p>{{ show.description }}</p>
  </header>

  {# Destinations #}
  {% if show.destinations and show.destinations.length > 0 %}
  <section>
    <h2>All Destinations</h2>
    <div class="grid grid-3">
      {% for destId in show.destinations %}
      <div class="card">
        <div class="card-body">
          <h3 class="card-title">{{ destId | replace("-", " ") | title }}</h3>
          <a href="/locations/{{ destId }}/">View Location â†’</a>
        </div>
      </div>
      {% endfor %}
    </div>
  </section>
  {% endif %}

  {# YouTube Videos #}
  {% if show.youtubeVideos and show.youtubeVideos.length > 0 %}
  <section style="margin-top: var(--spacing-xl);">
    <h2>Videos</h2>
    <div class="video-grid">
      {% for video in show.youtubeVideos %}
        {% set videoId = video.id %}
        {% set title = video.title %}
        {% set placeholder = video.placeholder %}
        {% include "components/youtube.njk" %}
      {% endfor %}
    </div>
  </section>
  {% endif %}

  {# FAQs #}
  {% set faqs = show.faqs %}
  {% include "components/faq.njk" %}

  {# Related Shows #}
  <section style="margin-top: var(--spacing-xl);">
    <h2>Related Shows</h2>
    <div class="grid grid-3">
      {% for relatedShow in shows.shows | limit(3) %}
        {% if relatedShow.id != show.id %}
        <a href="/shows/{{ relatedShow.id }}/" class="card" style="text-decoration: none; color: inherit;">
          <div class="card-body">
            <span class="badge badge-network">{{ relatedShow.network }}</span>
            <h3 class="card-title" style="margin-top: 0.5rem;">{{ relatedShow.name }}</h3>
          </div>
        </a>
        {% endif %}
      {% endfor %}
    </div>
  </section>
</article>
