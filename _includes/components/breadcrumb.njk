{% if breadcrumbs and breadcrumbs.length > 0 %}
<nav class="breadcrumb container" aria-label="Breadcrumb">
  <ol>
    <li><a href="/">Home</a></li>
    {% for crumb in breadcrumbs %}
    <li>
      {% if loop.last %}
        <span aria-current="page">{{ crumb.name }}</span>
      {% else %}
        <a href="{{ crumb.url }}">{{ crumb.name }}</a>
      {% endif %}
    </li>
    {% endfor %}
  </ol>
</nav>
{% endif %}
